<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true"
    android:id="@+id/scroll_view_user_panel"
    android:layout_height="match_parent"
    tools:context="com.nowiczenko.andrzej.fragments.UserFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_user_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="24dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            tools:text="Witaj Uzytkowniku"
            android:textSize="28sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="12dp"
            android:background="@android:color/darker_gray"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_user_books"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B2DFDB"
            android:orientation="vertical"
            tools:listitem="@layout/row_items" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>